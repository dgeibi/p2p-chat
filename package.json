{
  "name": "p2p-chat-bootstrap",
  "version": "0.0.0",
  "license": "MIT",
  "description": "a P2P LAN chatting and file sharing tool",
  "author": "dgeibi",
  "private": true,
  "scripts": {
    "app": "cd packages/p2p-chat && yarn run",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "format": "prettier --write '**/*.{js,scss}'",
    "precommit": "lint-staged",
    "pub": "lerna publish",
    "postinstall": "cd packages/p2p-chat && yarn"
  },
  "lint-staged": {
    "*.{scss,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^5.5.0",
    "eslint-config-dgeibi": "^5.1.1",
    "husky": "^0.14.3",
    "lerna": "2.8.0",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 90
  }
}
