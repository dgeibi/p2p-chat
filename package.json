{
  "name": "p2p-chat-demo",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "description": "a p2p chat app",
  "main": "index.js",
  "author": "dgeibi <png.inside@gmail.com> (blog.dgeibi.xyz)",
  "scripts": {
    "start": "electron .",
    "dist": "build",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds"
  },
  "keywords": [
    "electron-app",
    "electron",
    "p2p",
    "socket"
  ],
  "dependencies": {
    "dateformat": "^2.0.0",
    "fs-extra": "^3.0.1",
    "getport": "^0.1.0",
    "ip": "^1.1.5"
  },
  "devDependencies": {
    "electron": "^1.6.10",
    "electron-builder": "^18.3.5",
    "electron-packager": "^8.7.0"
  },
  "build": {
    "appId": "xyz.dgeibi.p2pchat",
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
