{
  "name": "p2p-chat-bootstrap",
  "version": "0.0.0",
  "license": "MIT",
  "description": "a P2P LAN chatting and file sharing tool",
  "author": "dgeibi <png.inside@gmail.com> (blog.dgeibi.xyz)",
  "private": true,
  "scripts": {
    "app": "cd packages/p2p-chat && npm run",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "prettier": "prettier --write '**/*.js' --ignore-path .eslintignore",
    "format": "run-s prettier fix",
    "precommit": "lint-staged",
    "pub": "lerna publish",
    "postinstall": "lerna bootstrap"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^4.6.1",
    "babel-eslint": "^7.2.3",
    "eslint-config-dgeibi": "^3.0.5",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.2.0",
    "husky": "^0.14.3",
    "lerna": "2.2.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.6.1",
    "lint-staged": "^4.2.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 90
  }
}
