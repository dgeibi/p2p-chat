{
  "name": "p2p-chat",
  "version": "0.5.0",
  "license": "MIT",
  "private": true,
  "description": "a p2p chat app",
  "main": "index.js",
  "author": "dgeibi <png.inside@gmail.com> (blog.dgeibi.xyz)",
  "scripts": {
    "start": "electron .",
    "dist": "build",
    "dist:wl": "build -wl",
    "pack": "build --dir",
    "format": "prettier-eslint --write './view/**/*.js' './*.js'",
    "prepare": "npm run chat",
    "chat": "cd chat && npm install --production"
  },
  "keywords": [
    "electron-app",
    "electron",
    "p2p",
    "socket"
  ],
  "dependencies": {
    "dateformat": "^2.0.0",
    "escape-html": "^1.0.3",
    "logger": "github:dgeibi/logger#305933c"
  },
  "devDependencies": {
    "electron": "^1.6.10",
    "electron-builder": "^18.3.5",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-config-dgeibi": "github:dgeibi/eslint-config-dgeibi#fc0e50d",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-no-async-without-await": "^1.2.0",
    "prettier-eslint-cli": "^4.1.1"
  },
  "build": {
    "appId": "xyz.dgeibi.p2pchat",
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": {
        "target": "portable",
        "arch": "ia32"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
