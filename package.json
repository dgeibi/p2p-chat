{
  "name": "p2p-chat-bootstrap",
  "version": "0.0.0",
  "license": "MIT",
  "description": "a P2P LAN chatting and file sharing tool",
  "author": "dgeibi <png.inside@gmail.com> (blog.dgeibi.xyz)",
  "private": true,
  "scripts": {
    "app": "cd packages/p2p-chat && npm run",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "format": "prettier-eslint --write '**/*.{js,scss}'",
    "precommit": "lint-staged",
    "pub": "lerna publish",
    "bootstrap": "lerna bootstrap",
    "postinstall": "npm run bootstrap"
  },
  "lint-staged": {
    "*.{scss,js}": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^4.6.1",
    "babel-eslint": "^7.2.3",
    "eslint-config-dgeibi": "^3.0.5",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.2.0",
    "husky": "^0.14.3",
    "lerna": "2.2.0",
    "npm-run-all": "^4.0.2",
    "prettier-eslint-cli": "^4.4.0",
    "lint-staged": "^4.2.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 90
  }
}
