{
  "name": "p2p-chat-demo",
  "version": "0.2.0",
  "license": "MIT",
  "private": true,
  "description": "a p2p chat app",
  "main": "index.js",
  "author": "dgeibi <png.inside@gmail.com> (blog.dgeibi.xyz)",
  "scripts": {
    "start": "electron .",
    "dist": "build",
    "dist:wl": "build -wl",
    "pack": "build --dir",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier-eslint --write './view/**/*.js' './*.js'"
  },
  "keywords": [
    "electron-app",
    "electron",
    "p2p",
    "socket"
  ],
  "dependencies": {
    "dateformat": "^2.0.0",
    "logger": "github:dgeibi/logger#684f9cc",
    "p2p-chat": "github:dgeibi/p2p-chat#v1.0.0"
  },
  "devDependencies": {
    "electron": "^1.6.10",
    "electron-builder": "^18.3.5",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-config-dgeibi": "github:dgeibi/eslint-config-dgeibi",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-no-async-without-await": "^1.2.0",
    "prettier-eslint-cli": "^4.0.2"
  },
  "build": {
    "appId": "xyz.dgeibi.p2pchat",
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": {
        "target": "portable",
        "arch": "ia32"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
